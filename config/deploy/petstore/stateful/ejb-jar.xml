<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC
      "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
      "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>
    <enterprise-beans>
        <session>
            <display-name>ShoppingCartSB</display-name>
            <ejb-name>ShoppingCartBean</ejb-name>
            <home>com.yaps.petstore.server.cart.ShoppingCartHome</home>
            <remote>com.yaps.petstore.server.cart.ShoppingCart</remote>
            <ejb-class>com.yaps.petstore.server.cart.ShoppingCartBean</ejb-class>
            <session-type>Stateful</session-type>
            <transaction-type>Container</transaction-type>
        </session>
    </enterprise-beans>
</ejb-jar>